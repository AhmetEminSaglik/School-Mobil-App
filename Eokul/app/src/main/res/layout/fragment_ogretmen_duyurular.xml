<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Başlık: Duyuru Yayınla -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duyuru Yayınla"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Duyuru Başlığı -->
    <EditText
        android:id="@+id/editTextDuyuruBaslik"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Duyuru Başlığı"
        android:padding="8dp"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_style"/>

    <!-- Duyuru İçeriği -->
    <EditText
        android:id="@+id/editTextDuyuruIcerik"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:background="#8F8E8E"
        android:gravity="top"
        android:inputType="text"
        android:hint="Duyuru İçeriği"
        android:padding="8dp"
        android:autofillHints=""
        tools:ignore="RtlCompat" />

    <!-- Duyuruyu Yayınla Butonu -->
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        style="@style/CustomButtonStyle"
        android:text="Duyuruyu Yayınla"
        android:background="@drawable/sign_up_button"/>


</LinearLayout>
