<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".view.mudur.MudurOgrenciEkleFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öğrenci Ekle"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:background="@drawable/linear_layout_style"
        >
    <!-- Ad Giriş Kutusu -->
    <EditText
        android:id="@+id/adEditText"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ad"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center" />

    <!-- Soyad Giriş Kutusu -->
    <EditText
        android:id="@+id/soyadEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Soyad"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="8dp"
        android:autofillHints="" />

    <!-- T.C. Giriş Kutusu -->
    <EditText
        android:id="@+id/kullaniciAdiEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Kullanıcı Adı"
        android:maxLength="11"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center"/>

    <!-- Veli Adı Giriş Kutusu -->
    <EditText
        android:id="@+id/sifreEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Şifre"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center" />

    <!-- Okul No Giriş Kutusu -->
    <EditText
        android:id="@+id/noEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Okul No"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center" />

    <!-- Ekle Butonu -->
    <Button
        android:id="@+id/ekleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekle"
        android:background="@drawable/sign_up_button"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>